                                {{ form_errors(form) }}

                                {# Manual and exploded generation: #}
                            <div class="form-group">

                                {# Label. #}
                                {{ form_label(form.name, "name"|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

                                <div class="col-sm-10">

                                    {# Display errors for this field. #}
