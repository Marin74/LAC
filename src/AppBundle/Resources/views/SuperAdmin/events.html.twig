                                {{ form_errors(formAdd.name) }}

                                {# Input #}
                                {{ form_widget(formAdd.name) }}
                            </div>
                        </div>
                        <div class="form-group">

                            {{ form_label(formAdd.file, "picture"|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
