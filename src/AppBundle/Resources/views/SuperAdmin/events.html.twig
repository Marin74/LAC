                                </div>
                            </div>
                            <div class="form-group">

                                {{ form_label(form.latitude, "latitude"|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                                <div class="col-sm-10">
                                    {{ form_errors(form.latitude) }}

