                                </div>
                                <h3>{{ "place"|trans }}</h3>
                                <div class="form-group">

                                    {{ form_label(form.place, "place_name"|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                                    <div class="col-sm-10">
